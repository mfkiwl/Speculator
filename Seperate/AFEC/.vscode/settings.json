// Place your settings in this file to overwrite default and user settings.
{
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/.idea": true,
        "3rdParty": true,
        "Source/Crawler/XCrawler/Resources": true,
        "Source/Crawler/XUnitTests/Resources": true
    },
    "files.associations": {
      "deque": "cpp",
      "initializer_list": "cpp",
      "list": "cpp",
      "map": "cpp",
      "queue": "cpp",
      "set": "cpp",
      "vector": "cpp",
      "xmemory0": "cpp",
      "xstring": "cpp",
      "xtree": "cpp",
      "xutility": "cpp",
      "cstdlib": "cpp",
      "string": "cpp",
      "unordered_map": "cpp",
      "exception": "cpp",
      "functional": "cpp",
      "iterator": "cpp",
      "memory": "cpp",
      "memory_resource": "cpp",
      "optional": "cpp",
      "string_view": "cpp",
      "fstream": "cpp",
      "istream": "cpp",
      "new": "cpp",
      "ostream": "cpp",
      "sstream": "cpp",
      "stdexcept": "cpp",
      "streambuf": "cpp",
      "system_error": "cpp",
      "tuple": "cpp",
      "type_traits": "cpp",
      "typeinfo": "cpp",
      "array": "cpp",
      "thread": "cpp"
    },
    "cmake.configureOnOpen": true,
    "cmake.sourceDirectory": "${workspaceFolder}/Source",
    "cmake.buildDirectory": "${workspaceFolder}/Build/Out",
  }
